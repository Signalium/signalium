{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2024",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Modules */
    "jsx": "react"
  }
}
