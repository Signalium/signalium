{
  "name": "signalium",
  "version": "2.0.2",
  "type": "module",
  "repository": "https://github.com/signalium/signalium",
  "description": "Scalable signals, effortless async. Reactivity at critical mass.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./config": {
      "types": "./dist/esm/config.d.ts",
      "import": "./dist/esm/config.js",
      "require": "./dist/cjs/config.js",
      "default": "./dist/esm/config.js"
    },
    "./utils": {
      "types": "./dist/esm/utils.d.ts",
      "import": "./dist/esm/utils.js",
      "require": "./dist/cjs/utils.js",
      "default": "./dist/esm/utils.js"
    },
    "./debug": {
      "types": "./dist/esm/debug.d.ts",
      "import": "./dist/esm/debug.js",
      "require": "./dist/cjs/debug.js",
      "default": "./dist/esm/debug.js"
    },
    "./react": {
      "types": "./dist/esm/react/index.d.ts",
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "default": "./dist/esm/react/index.js"
    },
    "./transform": {
      "types": "./dist/esm/transform/index.d.ts",
      "import": "./dist/esm/transform/index.js",
      "require": "./dist/cjs/transform/index.js",
      "default": "./dist/esm/transform/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/esm/**",
    "dist/cjs/**",
    "react.js",
    "transform.js",
    "debug.js",
    "utils.js",
    "config.js",
    "README.md",
    "CHANGELOG.md",
    "LICENSE*"
  ],
  "peerDependencies": {
    "react": ">=18.3.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "vitest dev",
    "dev:unit": "vitest dev --project unit",
    "dev:transform": "vitest dev --project transform",
    "dev:react": "vitest dev --project react",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:transform": "vitest run --project transform",
    "test:react": "vitest run --project react",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "node scripts/generate-legacy-entries.cjs",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --moduleResolution node"
  },
  "author": "Kristen Hewell Garrett <me@pzuraq.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.0.6",
    "playwright": "^1.50.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.1.2",
    "vite-plugin-babel": "^1.3.0",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  }
}
